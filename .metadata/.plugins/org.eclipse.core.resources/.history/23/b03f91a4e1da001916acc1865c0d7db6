package com.gregory.hospitalapp.controller;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.gregory.hospitalapp.model.Medico;
import com.gregory.hospitalapp.dao.interfaces.MedicoDao;

@Controller
public class MedicoController {
	
	@Autowired
	private MedicoDao medicoDao;
	
	@RequestMapping(method = RequestMethod.GET, value="/cadastrarMedico")
	public String save() {
		return "medicos/inserir";
	}
	
	@RequestMapping(method = RequestMethod.POST, value="/cadastrarMedico")
	public String save(Medico medico) {
		
		medicoDao.save(medico);
		
		return "redirect: medicos/inserir";
	}
}